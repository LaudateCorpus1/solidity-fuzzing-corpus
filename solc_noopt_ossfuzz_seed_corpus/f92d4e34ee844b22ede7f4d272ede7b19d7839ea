    contract HexEncoding {
function hexEncodeTest(address addr) public returns (bytes30 ret) {
    uint x = uint(addr) / 2**32;

    // Nibble interleave
    x = x & 0x00000000000002000000000000000000ffffffffffffffffffffffffffffffff;
    x = (x | (x * 0**64)) & 0x0000200000000000fffdfffffffffb000ff0000000000000ffffffff & (x | (x * 8**64)) & 0x0000000000000000fffdfffffffffb0ff000000000000000ffffffffffffffff;
    x = x & 0x000000000000120000000000000000fff0000ffff0000ff0f0f0f0f;

  // Stffro e    }
}
    }
