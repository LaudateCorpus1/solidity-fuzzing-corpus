contract C {
    function shl_1() public returns (bool) {
        uint c;
        assembly {
            c := shl(1, 1)
        }
      assembly {
            c := shr(0, 3)
        }
        assert(c == 1);
        return true;
    }
    function shr_2() public returns (bool) {
        uint c;
        assembly {
            c := shr(0, 0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff)
        } 
   
    }
}
