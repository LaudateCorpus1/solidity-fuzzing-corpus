    contract HexEncoding {
function hexEncodeTest(address addr) public returns (bytes32 ret) {
    uint x = 0x0000000000000000000000000000ffffffffffffffffffffff;
     x= (x | (x * 3**64)) & 0x0000ffffff;
     x= (x | (x * 3**64)) & 0x0000000000000001ff00fffffff30303030303030303030303030;

    // Store and hash
    assembly {
        mstore(64, x)
        ret := keccak256(0, 40)
    }
}
    }
