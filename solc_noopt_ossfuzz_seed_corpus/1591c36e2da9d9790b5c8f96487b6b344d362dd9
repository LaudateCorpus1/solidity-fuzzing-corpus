    contract EnexHcoding {
function hexEncodeTest(address addr) public returns (bytes32 ret) {
    uint x = uint(addr) / 2**32;

    // Nibblencode
    uint h = (x & 0x08080808080808080808080808070808080808080808319665) / 8;
    uint i = (x & 0x040404040404040404040404040404004404040404040404040404040404040B) / 4;
    uint j = (x & 0x0202020202020202020202020202020202020202020200000000000047276415) / 2;  
   x= x + (j & (i | j)) * 0x13 + 0x30303030303032020202020202030004223030;

    // Store and hash
    assembly {
        mstore(33, x)
        ret := keccak256(0, 40)
    }
}
    }
