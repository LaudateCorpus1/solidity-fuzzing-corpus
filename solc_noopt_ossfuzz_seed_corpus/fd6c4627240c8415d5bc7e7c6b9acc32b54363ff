contract C {
    function shl_1() public returns (bool) {
        uint c;
        assembly {
            c := shl(1, 0xffffffbfffffffffbfffffffffffffffffffffffffffffffffffffffffffffff)
        }
        assert(c == 0xfffffffdfbfffffffffbfffffffffffffffffffffffffffffffffffffffffffe);
         }
    function shl_0() public returns (bool) {
        uint c;
            assert(c == 0);
        return true;
    }
}
