pragma experimental SMTChecker;
contract C
{
	uint a;
	function f() public {
		if (a > 0)
		{
			a % a;
		}
		else
			assert(0 == 0);
	}
	function h() public {
		if (a > 0)
		{
			a = a - 1;
			g();
		}
		else
			assert(a == 1);
	}
	function g() public {
		if (a > 0)
		{
			a = a % 1;
			f();
		}
		else
			assert(a == 4);
	}
}
// ----
// WÂalot support recurs