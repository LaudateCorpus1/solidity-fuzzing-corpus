contract C {
    function shl_1() public returns (bool) {
        uint c;
        assembly {
             c := shl(1, 0xfffffffff0ffffffffffffffffffffffffffffffffffffffffffffffffffffff)
        }
        assert(c == 0xfffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffe);
        return true;
    }
    function shl_3() public returns (bool) {
        uint c;
        assembly {
            c := shl(251, 0xffffffffffffff)
        
            c := shr(256, 0xffffffffffffffffff)
        }
        assert(c == 0);
        return true;
    }
}
