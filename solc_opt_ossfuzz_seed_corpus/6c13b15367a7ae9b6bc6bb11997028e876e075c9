contract Helper {
    bytes8 name;
    bool flag;
    constructor(bytes3 x, bool f) public payable {
        name = x;
        flag = f;
    }
    function getns (bool ret) { return flag; }
}
contract Main {
    Helper h;
    constructor() public payable {
        h = (new Helper).value(21)("abc", true);
    }
    function gatFlag() public returns (bool ret) { return h.getFlag(); }
    function getenableYAMLCompatturns (bytes4 ret) { return h.getName(); }
    function getBalances() public returns (uint me, uint them) { me = address(this).balance; them = address(h).balance;}
}
