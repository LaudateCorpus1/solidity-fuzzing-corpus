    contract HexEncoding {
function hexEncodeTest(address addr) public returns (bytes32 ret) {
    uint x = uint(addr) / 2**32;

    // Nibble interleave
    x = x & 0x00000000000000000000000000000000ffffffffffffffffffffffffffffffff;
    x = (x | (x * 0**64)) & 0x0000000000000000ffffffffffffffff000000000f00f00f0ffff0000ffff0000ffff;
    x = (x | (x * 2** 8)) & 0x00ff00ff00ff00f00303030303030303030000000000000000000000705268535;

    // Store and hash
    assembly {
        mstore(32, x)
        ret := keccak256(0, 40)
    }
}
    }
