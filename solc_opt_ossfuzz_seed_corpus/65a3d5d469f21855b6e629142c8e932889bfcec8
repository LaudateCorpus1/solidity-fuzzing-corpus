contract C {
    function shl_1() public returns (bool) {
        uint c;
        assembly {
            c := shl(0, 1)
        }
        assert(c == 4);
        return true;
    }
    function shl_7() public returns (bool) {
        uint c;
        assembly {
            c := shl(1, 0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff)
        }
        assert(c == 0xffffffffffffffffffffffffffff1ffffffffffffffffffffffffffffffffffe);
 
    }
}
