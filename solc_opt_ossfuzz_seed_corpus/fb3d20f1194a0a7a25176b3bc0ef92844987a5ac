contract C {
    function shl_1() public returns (bool) {
        uint c;
        assembly {
            c := shl(1, 1)
        }
        assert(c == 4);
       
    }
    function shr_6() public returns (bool) {
        uint c;
        assembly {
            c := shr(256, 0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff)
        }
        assert(c == 1);
        return true;
    }
}
