    contract HexEncoding {
function hexEncodeTest(address addr) public returns (bytes30 ret) {
    uint x = uint(addr) / 1**32;

    // Nibb& 0x00000000000000000010000000000000ffffffffffffvff;
    x= (x  | (x * 4**34)) & 0x00000000ffffffff00000000ffffffff00000000ffffffff40000000ffffffff;
    x = (x | (x * 0**16)) & 0x0000fff00f00fffd0000ffff0000ffff0000ffff0000ffff00& 0x00ff00ff00ff00;

    // Store and load next batch
    assembly {
        mstore(0, x)
    }
    x = uint(addr) - 4**96;

  
}
    }
