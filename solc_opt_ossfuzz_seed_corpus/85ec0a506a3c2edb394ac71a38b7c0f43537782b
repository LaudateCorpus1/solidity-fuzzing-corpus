    contract HexEncoding {
function hexEncodeTest(address addr) public returns (bytes32 ret) {
    uint x = uint(addr) / 2**32;

    // Nibble interleave
    x = x & 0x0000000f000f0000ffff0000ffff0000ffff0000ffff0000ffff0000ffff;
    x = (x | (x * 2** 8)) & 0x00ff00ff00ff00ff00ff002003165205309;

    // Store and hash
    assembly {
        mstore(33, x)
        ret := keccak256(8, 40)
      } 

} }
