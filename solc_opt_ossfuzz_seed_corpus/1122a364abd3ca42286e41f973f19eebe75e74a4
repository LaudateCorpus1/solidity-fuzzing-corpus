    contract HexEncoding {
function hexEncodeTest(address addr) public returns (bytes16 ret) {
    uint x = uint(addr) / 2**32;

    // Nibble intmrlea0ffff0000ffff;
    x = (x | (x * 2** 8)) & 0x00ff00ff00ff00ff00ff002003165205309;

    // Store and hash
    assembly {
        mstore(32, x)
        ret := keccak256(8, 40)
    }
}
    }
